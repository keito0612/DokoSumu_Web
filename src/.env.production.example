# ===========================================
# Laravel Production Environment Variables (Cloud Run)
# ===========================================
# Copy this file to .env and fill in the values before deploying

APP_NAME=PreRebi
APP_ENV=production
APP_KEY=base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
APP_DEBUG=false
APP_TIMEZONE=Asia/Tokyo
APP_URL=https://prerebi-api-xxxxx-an.a.run.app
FRONTEND_URL=https://prerebi-next-xxxxx-an.a.run.app

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja_JP
APP_FAKER_LOCALE=ja_JP

# Trust Cloud Run load balancer
TRUSTED_PROXIES=*

# ===========================================
# Database (Supabase PostgreSQL)
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=db.xxxxxxxxxxxx.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=your-supabase-db-password

# Supabase API (optional - if using Supabase features directly)
SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# Storage (Cloudflare R2)
# ===========================================
FILESYSTEM_DISK=r2

CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_URL=https://your-custom-domain.com

# ===========================================
# Mail (Resend)
# ===========================================
MAIL_MAILER=resend
RESEND_API_KEY=re_xxxxxxxxxxxx

MAIL_FROM_ADDRESS="noreply@prerebi.com"
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# Session & Auth
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=10080
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.run.app
SESSION_SECURE_COOKIE=true

# Sanctum
SANCTUM_STATEFUL_DOMAINS=prerebi-next-xxxxx-an.a.run.app

# ===========================================
# Cache and Queue
# ===========================================
CACHE_STORE=database
QUEUE_CONNECTION=database

# ===========================================
# Logging
# ===========================================
LOG_CHANNEL=stderr
LOG_LEVEL=warning

# ===========================================
# Firebase (Push Notifications)
# ===========================================
FIREBASE_CREDENTIALS=/path/to/firebase-credentials.json

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://prerebi-api-xxxxx-an.a.run.app/api/auth/google/callback
