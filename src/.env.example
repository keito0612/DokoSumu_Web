# ===========================================
# 環境設定ファイル
# ===========================================
# ローカル開発: このファイルをコピーして .env を作成
# 本番環境: .env.production.example を参照

APP_NAME=PreRebi
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Tokyo
APP_URL=http://localhost
FRONTEND_URL=http://localhost:3000

APP_LOCALE=ja
APP_FALLBACK_LOCALE=ja_JP
APP_FAKER_LOCALE=ja_JP

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# データベース設定
# ===========================================
# ローカル開発: MySQL (docker-compose)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=APP
DB_USERNAME=APP
DB_PASSWORD=password

# 本番環境: Supabase PostgreSQL (以下をコメント解除)
# DB_CONNECTION=pgsql
# DB_HOST=db.xxxxxxxxxxxx.supabase.co
# DB_PORT=5432
# DB_DATABASE=postgres
# DB_USERNAME=postgres
# DB_PASSWORD=your-supabase-db-password

# Supabase API (オプション)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# ファイルストレージ設定
# ===========================================
# ローカル開発: public (ローカルストレージ)
FILESYSTEM_DISK=public

# 本番環境: r2 (Cloudflare R2) - 以下を設定
# FILESYSTEM_DISK=r2
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET=
CLOUDFLARE_R2_ENDPOINT=
CLOUDFLARE_R2_URL=

# ===========================================
# メール設定
# ===========================================
# ローカル開発: Mailhog (docker-compose)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@prerebi.local"
MAIL_FROM_NAME="${APP_NAME}"

# 本番環境: Resend - 以下を設定
# MAIL_MAILER=resend
RESEND_API_KEY=

# ===========================================
# セッション・キャッシュ設定
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database
CACHE_STORE=database
CACHE_PREFIX=

# ===========================================
# Redis設定 (オプション)
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# 外部サービス設定
# ===========================================
# Firebase (プッシュ通知)
FIREBASE_CREDENTIALS=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost/api/auth/google/callback

# ===========================================
# AWS設定 (未使用)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
